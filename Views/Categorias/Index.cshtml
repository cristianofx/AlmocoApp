@model IEnumerable<AlmocoApp.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Adicionar Categoria", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaNome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CategoriaID }, new { @class = "btn btn-info" }) |
            @*@Html.ActionLink("Detalhes", "Details", new { id = item.CategoriaID }, new { @class = "btn btn-info" }) |*@
            @Html.ActionLink("Deletar", "Delete", new { id = item.CategoriaID }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
